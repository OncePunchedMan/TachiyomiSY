<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--== Dracula Theme ==-->
    <style name="Theme.Tachiyomi.Dracula">
        <!-- Theme Colors -->
        <item name="colorPrimary">@color/accent_dracula</item>
        <item name="colorTertiary">@color/tertiary_dracula</item>
        <item name="colorControlHighlight">@color/ripple_colored_dracula</item>
        <item name="colorSurface">@color/surface_dracula</item>
        <item name="android:colorBackground">@color/background_dracula</item>

        <!-- Custom Attributes-->
        <item name="colorFilterActive">@color/filter_dracula</item>
    </style>

    <!--== Midnight Dusk Theme ==-->
    <style name="Theme.Tachiyomi.MidnightDusk">
        <!-- Theme Colors -->
        <item name="colorPrimary">@color/accent_midnightdusk</item>
        <item name="colorTertiary">@color/md_blue_A400</item>
        <item name="colorControlHighlight">@color/ripple_colored_midnightdusk</item>
        <item name="colorSurface">@color/surface_midnightdusk</item>
        <item name="android:colorBackground">@color/background_midnightdusk</item>
    </style>

    <!--== AMOLED Mode Overlay ==-->
    <style name="ThemeOverlay.Tachiyomi.Amoled" parent="">
        <!-- Theme Colors -->
        <item name="colorSurface">@color/surface_amoled</item>
        <item name="android:colorBackground">@color/background_amoled</item>

        <!-- Custom Attributes-->
        <item name="colorFilterActive">@color/filter_dark</item>
    </style>

</resources>
