<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--== Purple Theme ==-->
    <style name="Theme.Tachiyomi.Purple">
        <!-- Theme Colors -->
        <item name="colorPrimary">@color/accent_purple</item>
        <item name="colorOnPrimary">@color/color_on_primary_purple</item>
        <item name="colorTertiary">@color/tertiary_purple</item>
        <item name="colorOnTertiary">@color/color_on_tertiary_purple</item>
        <item name="colorControlHighlight">@color/ripple_colored_purple</item>
        <item name="colorSurface">@color/surface_purple</item>
        <item name="android:colorBackground">@color/background_purple</item>

        <!-- Custom Attributes-->
        <item name="colorFilterActive">@color/filter_purple</item>
    </style>

    <!--== Midnight Dusk Theme ==-->
    <style name="Theme.Tachiyomi.MidnightDusk">
        <!-- Theme Colors -->
        <item name="colorPrimary">@color/accent_midnightdusk</item>
        <item name="colorTertiary">@color/md_blue_A400</item>
        <item name="colorControlHighlight">@color/ripple_colored_midnightdusk</item>
        <item name="colorSurface">@color/surface_midnightdusk</item>
        <item name="android:colorBackground">@color/background_midnightdusk</item>
    </style>

    <!--== AMOLED Mode Overlay ==-->
    <style name="ThemeOverlay.Tachiyomi.Amoled" parent="">
        <!-- Theme Colors -->
        <item name="colorSurface">@color/surface_amoled</item>
        <item name="android:colorBackground">@color/background_amoled</item>

        <!-- Custom Attributes-->
        <item name="colorFilterActive">@color/filter_dark</item>
    </style>

</resources>
